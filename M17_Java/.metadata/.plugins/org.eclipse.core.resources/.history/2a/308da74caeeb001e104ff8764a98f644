	@Override
	public void update() 
	{
		//Shooter will read the list of gameobjects. If an object spawns (we could do this later with observers), it will choose a target and shoot at him.
		if(m_GameLoop.getGameObjects().size() > 1)
		{
			//Selects the first item
		}	
	}
}
