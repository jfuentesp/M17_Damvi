package Classes;

public class Transform extends Component {

	//Default values will be x = 0, y = 0, z = 0, except for scale, as it needs to be > 0 to exist.
	private float [] position = {0,0,0};
	private float [] rotation = {0,0,0};
	private float [] scale = {1,1,1};
	
	public Transform(float [] position, float [] rotation, float [] scale) 
	{
		super("Transform");
		this.position = position;
		this.rotation = rotation;
		this.scale = scale;
	}
	
	public void setRotation(float x, float y, float z)
	{
		this.rotation[0] = x % 360;
		this.rotation[1] = y % 360;
		this.rotation[2] = z % 360;
	}
	
	public void setPosition(float x, float y, float z)
	{
		this.position[0] = x;
		this.position[1] = y;
		this.position[2] = z;
	}
	
	public void setScale(float x, float y, float z)
	{
		this.scale[0] = x;
		this.scale[1] = y;
		this.scale[2] = z;
	}

	public float[] getRotation()
	{
		return this.rotation;
	}
	
	public float[] getPosition()
	{
		return this.position;
	}
	
	public float[] getScale()
	{
		return this.scale;
	}
	
	public float getRotationX()
	{
		return this.rotation[0];
	}
	
	public float getRotationY()
	{
		return this.rotation[1];
	}
	
	public float getRotationZ()
	{
		return this.rotation[2];
	}
	
	public float getPositionX()
	{
		return this.position[0];
	}
	
	public float getPositionY()
	{
		return this.position[1];
	}
	
	public float getPositionZ()
	{
		return this.position[2];
	}
	
	@Override
	public void update() {
		// TODO Auto-generated method stub
		
	}
	
	
}
